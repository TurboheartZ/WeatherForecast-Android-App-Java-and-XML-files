<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_display_about"
    tools:context="com.zhangxy.weatherforecast.DisplayAboutActivity">


    <ImageView android:id="@+id/img_portrait"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/myportrait"
        android:layout_centerHorizontal="true"/>
    <TextView android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_portrait"
        android:text="Name: Xinyi Zhang"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"/>

    <TextView android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:text="Student Id: 9849507799"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"/>
</RelativeLayout>
